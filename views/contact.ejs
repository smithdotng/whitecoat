<%- include('../layouts/main') %>
<div class=\
container
py-5\>
    <h1 class=\mb-4\>Contact Us</h1>
    
    <div class=\row\>
        <div class=\col-md-4
mb-4\>
            <div class=\card
h-100
text-center\>
                <div class=\card-body\>
                    <i class=\fas
fa-phone
fa-3x
text-primary
mb-3\></i>
                    <h5>Phone</h5>
                    <p class=\text-muted\>+1-800-WHITECOAT</p>
                    <p class=\small\>(1-800-948-3262)</p>
                </div>
            </div>
        </div>
        <div class=\col-md-4
mb-4\>
            <div class=\card
h-100
text-center\>
                <div class=\card-body\>
                    <i class=\fas
fa-envelope
fa-3x
text-success
mb-3\></i>
                    <h5>Email</h5>
                    <p class=\text-muted\>support@whitecoat.com</p>
                    <p class=\small\>24/7 Support Available</p>
                </div>
            </div>
        </div>
        <div class=\col-md-4
mb-4\>
            <div class=\card
h-100
text-center\>
                <div class=\card-body\>
                    <i class=\fas
fa-clock
fa-3x
text-info
mb-3\></i>
                    <h5>Business Hours</h5>
                    <p class=\text-muted\>Monday - Friday</p>
                    <p class=\small\>9:00 AM - 6:00 PM EST</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class=\card
mt-4\>
        <div class=\card-body\>
            <h5 class=\card-title
mb-4\>Send us a Message</h5>
            <form action=\/contact\ method=\POST\>
                <div class=\row\>
                    <div class=\col-md-6
mb-3\>
                        <label for=\name\ class=\form-label\>Name</label>
                        <input type=\text\ class=\form-control\ id=\name\ name=\name\ required>
                    </div>
                    <div class=\col-md-6
mb-3\>
                        <label for=\email\ class=\form-label\>Email</label>
                        <input type=\email\ class=\form-control\ id=\email\ name=\email\ required>
                    </div>
                </div>
                <div class=\mb-3\>
                    <label for=\subject\ class=\form-label\>Subject</label>
                    <input type=\text\ class=\form-control\ id=\subject\ name=\subject\ required>
                </div>
                <div class=\mb-3\>
                    <label for=\message\ class=\form-label\>Message</label>
                    <textarea class=\form-control\ id=\message\ name=\message\ rows=\5\ required></textarea>
                </div>
                <button type=\submit\ class=\btn
btn-primary\>
                    <i class=\fas
fa-paper-plane
me-2\></i> Send Message
                </button>
            </form>
        </div>
    </div>
</div>
