<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account – WhiteCoat Anonymous Testing</title>

    <!-- LonelyPro CSS -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="/assets/css/nice-select.css">
    <link rel="stylesheet" href="/assets/css/slick.css">
    <link rel="stylesheet" href="/assets/css/slick-theme.css">
    <link rel="stylesheet" href="/assets/css/odometer.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="shortcut icon" href="/assets/images/favicon.png">
</head>
<body>

    <!-- Preloader -->
    <div class="overlayer"><div class="loader"><div class="loader-inner"></div></div></div>
    <div class="scrollToTop"><i class="fas fa-angle-up"></i></div>
    <div class="overlay"></div>
    <div class="overlayTwo"></div>

    <!-- Header -->
    <header class="header-3">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-3 col-12">
                    <div class="d-flex flex-wrap align-items-center justify-content-between justify-content-lg-center">
                        <div class="header-bar d-lg-none"><span></span><span></span><span></span></div>
                        <div class="logo">
                            <a href="/"><img src="/assets/images/logo/logo.png" alt="WhiteCoat"></a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-12">
                    <div class="header-top">
                        <div class="header-top-area">
                            <ul class="left">
                                <li><i class="fas fa-shield-alt"></i> 100% Anonymous Testing</li>
                                <li><i class="fas fa-map-marker-alt"></i> Nationwide Service</li>
                            </ul>
                        </div>
                    </div>
                    <div class="header-bottom">
                        <div class="menu-area justify-content-between w-100">
                            <ul class="menu">
                                <li><a href="/">Home</a></li>
                                <li><a href="/about">About</a></li>
                                <li><a href="/services/how-it-works">How It Works</a></li>
                                <li><a href="/services/tests">Tests</a></li>
                                <li><a href="/privacy">Privacy</a></li>
                                <li><a href="/contact">Contact</a></li>
                            </ul>
                            <a href="/auth/login" class="custom-button"><span>Sign In</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="alert alert-success text-center py-3"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-danger text-center py-3"><%= error %></div>
    <% } %>

    <!-- Page Header -->
    <section class="page-header bg_img" data-background="/assets/images/banner/page-header.jpg">
        <div class="container">
            <div class="page-header-content">
                <h1 class="title text-uppercase">Create Your Account</h1>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>Register</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Register Section -->
    <div class="login-section padding-top padding-bottom">
        <div class="container">
            <div class="account-wrapper">
                <h3 class="title text-center mb-4">Get Started with WhiteCoat</h3>

                <!-- User Type Toggle -->
                <div class="text-center mb-4">
                    <div class="btn-group btn-group-lg" role="group">
                        <input type="radio" class="btn-check" name="userType" id="individual" value="individual" checked>
                        <label class="btn btn-outline-primary" for="individual">Individual</label>

                        <input type="radio" class="btn-check" name="userType" id="corporate" value="corporate">
                        <label class="btn btn-outline-primary" for="corporate">Business / Corporate</label>
                    </div>
                </div>

                <form action="/auth/register" method="POST" class="account-form" id="registerForm">
                    <!-- Common Fields -->
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email Address" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" name="phone" placeholder="Phone Number" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Create Password" minlength="8" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
                    </div>

                    <!-- Individual Fields -->
                    <div id="individualFields">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" name="firstName" placeholder="First Name" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" name="middleName" placeholder="Middle Name (Optional)">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" name="lastName" placeholder="Surname" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div>
                                <div class="form-group">
                                    <select name="gender" class="nice-select">
                                        <option value="">Select Gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="other">Other / Prefer not to say</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="date" name="dateOfBirth" placeholder="Date of Birth" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" name="occupation" placeholder="Occupation">
                        </div>

                        <h6 class="mt-4 mb-3">Residential Address</h6>
                        <div class="form-group">
                            <input type="text" name="residentialStreet" placeholder="Street Address" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" name="residentialCity" placeholder="City" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="residentialState" placeholder="State" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="residentialZip" placeholder="ZIP Code" required>
                            </div>
                        </div>
                    </div>

                    <!-- Corporate Fields -->
                    <div id="corporateFields" style="display: none;">
                        <div class="form-group">
                            <input type="text" name="companyName" placeholder="Organization / Company Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="companySector" placeholder="Sector (e.g., Healthcare, Corporate Wellness, Research)">
                        </div>

                        <h6 class="mt-4 mb-3">Business Address</h6>
                        <div class="form-group">
                            <input type="text" name="companyStreet" placeholder="Street Address" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" name="companyCity" placeholder="City" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="companyState" placeholder="State" required>
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="companyZip" placeholder="ZIP Code" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="d-block custom-button w-100">
                            <span>Create Account <i class="fas fa-user-plus ml-2"></i></span>
                        </button>
                    </div>
                </form>

                <div class="account-bottom text-center">
                    <span class="d-block cate pt-10">
                        Already have an account? <a href="/auth/login">Sign In</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="padding-top">
        <div class="footer-top bg_img" data-background="/assets/images/bg/footer-bg.jpg">
            <div class="container text-center text-white py-5">
                <h2>Your Privacy Is Sacred</h2>
                <p class="lead">No names. No records. Just results.</p>
                <a href="/privacy" class="custom-button mt-3"><span>Read Our Privacy Promise</span></a>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container text-center">
                <p>&copy; 2025 WhiteCoat – Anonymous Healthcare Testing</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/nice-select.js"></script>
    <script src="/assets/js/main.js"></script>
    <script>
        // Toggle between Individual & Corporate forms
        document.querySelectorAll('input[name="userType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.getElementById('individualFields').style.display = this.value === 'individual' ? 'block' : 'none';
                document.getElementById('corporateFields').style.display = this.value === 'corporate' ? 'block' : 'none';

                // Required field handling
                document.querySelectorAll('#individualFields input, #individualFields select').forEach(el => {
                    el.required = this.value === 'individual';
                });
                document.querySelectorAll('#corporateFields input').forEach(el => {
                    el.required = this.value === 'corporate';
                });
            });
        });

        new WOW().init();
    </script>
</body>
</body>
</html>