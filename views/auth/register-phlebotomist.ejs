<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Join as Phlebotomist – WhiteCoat Anonymous Healthcare</title>

    <!-- LonelyPro CSS (exact same as login/register) -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="/assets/css/nice-select.css">
    <link rel="stylesheet" href="/assets/css/slick.css">
    <link rel="stylesheet" href="/assets/css/slick-theme.css">
    <link rel="stylesheet" href="/assets/css/odometer.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="shortcut icon" href="/assets/images/favicon.png" type="image/x-icon">

    <style>
        .file-upload-area {
            border: 3px dashed #00d4ff;
            background: #f8fdff;
            border-radius: 16px;
            padding: 50px 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.4s;
        }
        .file-upload-area:hover {
            background: #e3faff;
            border-color: #00aaff;
        }
        .file-name {
            margin-top: 15px;
            font-weight: 600;
            color: #00d4ff;
            font-size: 1.1rem;
        }
        .ref-section {
            background: #f9f9f9;
            padding: 30px;
            border-radius: 12px;
            margin-top: 35px;
            border-left: 5px solid #00d4ff;
        }
        .section-title {
            text-align: center;
            font-size: 1.1rem;
            color: #555;
            margin: 35px 0 20px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>

    <!-- Preloader & Scroll Top -->
    <div class="overlayer"><div class="loader"><div class="loader-inner"></div></div></div>
    <div class="scrollToTop"><i class="fas fa-angle-up"></i></div>
    <div class="overlay"></div>
    <div class="overlayTwo"></div>

    <!-- Header – EXACT SAME AS LOGIN/REGISTER PAGES -->
    <header class="header-3" style="background-color: #ffffff;">
        <div class="container" style="background-color: #8b4513;">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-3 col-12">
                    <div class="d-flex flex-wrap align-items-center justify-content-between justify-content-lg-center">
                        <div class="header-bar d-lg-none"><span></span><span></span><span></span></div>
                        <div class="logo">
                            <a href="/"><img src="/assets/images/logo/logo.png" alt="WhiteCoat"></a>
                        </div>
                        <div class="ellepsis-bar d-lg-none"><i class="fas fa-ellipsis-h"></i></div>
                    </div>
                </div>
                <div class="col-xl-9 col-12">
                    <div class="header-top">
                        <div class="header-top-area">
                            <ul class="left">
                                <li><i class="fas fa-shield-alt"></i> 100% Anonymous Testing</li>
                                <li><i class="fas fa-map-marker-alt"></i> Nationwide Service</li>
                            </ul>
                            <ul class="social-icons">
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="header-bottom">
                        <div class="header-wrapper">
                            <div class="menu-area justify-content-between w-100">
                                <ul class="menu">
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/about">About</a></li>
                                    <li><a href="/services/how-it-works">How It Works</a></li>
                                    <li><a href="/services/tests">Tests</a></li>
                                    <li><a href="/privacy">Privacy</a></li>
                                    <li><a href="/contact">Contact</a></li>
                                </ul>
                                <div class="d-none d-lg-block">
                                    <a href="/auth/register" class="custom-button theme-two"><span>Get Started</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="alert alert-success text-center py-3 mb-0"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-danger text-center py-3 mb-0"><%= error %></div>
    <% } %>

    <!-- Page Header -->
    <section class="page-header bg_img" data-background="/assets/images/banner/page-header.jpg">
        <div class="container">
            <div class="page-header-content">
                <h1 class="title text-uppercase">Join as a Phlebotomist</h1>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>Join Team</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Phlebotomist Application Form -->
    <div class="login-section padding-top padding-bottom">
        <div class="container">
            <div class="account-wrapper">
                <h3 class="title">Become a WhiteCoat Phlebotomist</h3>
                <p class="text-center text-muted mb-5">Earn flexible income • Work near home • Help save lives</p>

                <form action="/auth/register-phlebotomist" method="POST" enctype="multipart/form-data" class="account-form">

                    <!-- Personal Details -->
                    <div class="section-title">Personal Information</div>
                    <div class="row">
                        <div class="col-md-4"><input type="text" name="firstName" placeholder="First Name" required></div>
                        <div class="col-md-4"><input type="text" name="middleName" placeholder="Middle Name (Optional)"></div>
                        <div class="col-md-4"><input type="text" name="lastName" placeholder="Last Name" required></div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <select name="gender" class="form-control" required>
                                <option value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other / Prefer not to say</option>
                            </select>
                        </div>
                    </div>

                    <!-- Add this after the gender select -->
<div class="row mt-3">
    <div class="col-md-6">
        <input type="email" name="email" placeholder="Email Address" required>
    </div>
    <div class="col-md-6">
        <input type="tel" name="phone" placeholder="Phone Number" required>
    </div>
</div>

                    <!-- Address -->
                    <div class="section-title">Residential Address</div>
                    <div class="form-group"><input type="text" name="street" placeholder="Street Address" required></div>
                    <div class="row">
                        <div class="col-md-6"><input type="text" name="city" placeholder="City" required></div>
                        <div class="col-md-3"><input type="text" name="state" placeholder="State" required></div>
                        <div class="col-md-3"><input type="text" name="zipCode" placeholder="ZIP Code" required></div>
                    </div>

                    <!-- CV Upload -->
                    <div class="section-title">Upload Your CV / Resume</div>
                    <div class="form-group">
                        <div class="file-upload-area">
                            <input type="file" name="cv" accept=".pdf" required id="cvInput" style="display: none;">
                            <label for="cvInput" style="cursor: pointer;">
                                <i class="fas fa-cloud-upload-alt fa-4x text-primary mb-3"></i><br>
                                <strong>Click to upload CV (PDF only, max 5MB)</strong>
                            </label>
                            <div class="file-name">No file selected</div>
                        </div>
                    </div>

                    <!-- Reference 1 -->
                    <div class="ref-section">
                        <h5>Professional Reference 1 <span class="text-danger">(Required)</span></h5>
                        <div class="row">
                            <div class="col-md-6"><input type="text" name="ref1Name" placeholder="Full Name" required></div>
                            <div class="col-md-6"><input type="email" name="ref1Email" placeholder="Email" required></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6"><input type="tel" name="ref1Phone" placeholder="Phone" required></div>
                            <div class="col-md-6"><input type="text" name="ref1Relation" placeholder="Relationship" required></div>
                        </div>
                    </div>

                    <!-- Reference 2 -->
                    <div class="ref-section mt-4">
                        <h5>Professional Reference 2 <span class="text-danger">(Required)</span></h5>
                        <div class="row">
                            <div class="col-md-6"><input type="text" name="ref2Name" placeholder="Full Name" required></div>
                            <div class="col-md-6"><input type="email" name="ref2Email" placeholder="Email" required></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6"><input type="tel" name="ref2Phone" placeholder="Phone" required></div>
                            <div class="col-md-6"><input type="text" name="ref2Relation" placeholder="Relationship" required></div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="form-group text-center mt-5">
                        <button type="submit" class="d-block custom-button w-100">
                            <span>Submit Application <i class="fas fa-paper-plane ml-2"></i></span>
                        </button>
                    </div>
                </form>

                <div class="account-bottom text-center mt-4">
                    <span class="d-block cate pt-10">
                        Already part of the team? <a href="/auth/login">Sign In</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer – EXACT SAME AS LOGIN PAGE -->
    <footer class="padding-top">
        <div class="footer-top">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h2 class="text-white text-uppercase">Your Health. Your Privacy. Our Promise.</h2>
                        <p class="lead text-white opacity-8">WhiteCoat delivers lab testing with zero identity linkage — ever.</p>
                        <a href="/auth/register" class="custom-button mt-4"><span>Get Started Free</span></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="text-center">
                    <p class="mb-0">&copy; 2025 WhiteCoat – Anonymous Healthcare Testing. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts (exact same as login page) -->
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/modernizr-3.6.0.min.js"></script>
    <script src="/assets/js/plugins.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/wow.min.js"></script>
    <script src="/assets/js/odometer.min.js"></script>
    <script src="/assets/js/viewport.jquery.js"></script>
    <script src="/assets/js/nice-select.js"></script>
    <script src="/assets/js/slick.min.js"></script>
    <script src="/assets/js/magnific-popup.min.js"></script>
    <script src="/assets/js/main.js"></script>
    <script>
        new WOW().init();

        // Show uploaded file name
        document.getElementById('cvInput')?.addEventListener('change', function(e) {
            const name = e.target.files[0]?.name || 'No file selected';
            document.querySelector('.file-name').textContent = name;
        });
    </script>

    <script>
    // Basic form validation
    document.querySelector('form').addEventListener('submit', function(e) {
        const email = document.querySelector('input[name="email"]');
        const phone = document.querySelector('input[name="phone"]');
        
        if (!email.value || !phone.value) {
            e.preventDefault();
            alert('Please fill in both email and phone fields.');
            return false;
        }
        
        // Validate email format
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email.value)) {
            e.preventDefault();
            alert('Please enter a valid email address.');
            email.focus();
            return false;
        }
        
        // Basic phone validation (at least 10 digits)
        const phoneDigits = phone.value.replace(/\D/g, '');
        if (phoneDigits.length < 10) {
            e.preventDefault();
            alert('Please enter a valid phone number with at least 10 digits.');
            phone.focus();
            return false;
        }
    });
</script>
</body>
</html>