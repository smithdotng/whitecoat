<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phlebotomist Management - WhiteCoat Admin</title>
    
    <!-- LonelyPro CSS -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="/assets/css/nice-select.css">
    <link rel="stylesheet" href="/assets/css/slick.css">
    <link rel="stylesheet" href="/assets/css/slick-theme.css">
    <link rel="stylesheet" href="/assets/css/odometer.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    
    <style>
        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }
        .badge-pending {
            background-color: #ffc107;
            color: #333;
        }
        .badge-approved {
            background-color: #28a745;
            color: white;
        }
        .badge-rejected {
            background-color: #dc3545;
            color: white;
        }
        .badge-suspended {
            background-color: #6c757d;
            color: white;
        }
        .action-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .cv-link {
            color: #007bff;
            text-decoration: underline;
        }
        .cv-link:hover {
            color: #0056b3;
        }
        .filter-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .application-details {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        .detail-value {
            color: #212529;
        }
        .reference-card {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }
        .modal-content {
            border-radius: 10px;
        }
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            color: #6c757d;
        }
        .empty-state i {
            font-size: 60px;
            margin-bottom: 20px;
            color: #dee2e6;
        }
    </style>
</head>
<body>
    <!-- Preloader & Scroll Top -->
    
    <div class="scrollToTop"><i class="fas fa-angle-up"></i></div>
    

    <!-- Header -->
    <header>
        <div class="header-top">
            <div class="container">
                <div class="header-top-area">
                    <ul class="left">
                        <li><i class="far fa-clock"></i> Always Live</li>
                        <li><i class="fas fa-shield-alt"></i> Admin Dashboard</li>
                    </ul>
                    <ul class="social-icons">
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="header-bottom">
            <div class="container">
                <div class="header-wrapper">
                    <div class="logo">
                        <a href="/">
                            <img src="/assets/images/logo/logo.png" alt="logo" style="width: 200px;">
                        </a>
                    </div>
                    <div class="menu-area">
                        <ul class="menu">
                            <li><a href="/admin/dashboard">Admin Dashboard</a></li>
                            <li><a href="/admin/add-test">Add Test</a></li>
                            <li><a href="/admin/manage-tests">Manage Tests</a></li>
                            <li><a href="/admin/phlebotomists" class="admin-menu-active">Phlebotomists</a></li>
                            <li><a href="/admin/view-requests">Requests</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Page Header -->
    <section class="page-header bg_img" data-background="/assets/images/banner/page-header.jpg">
        <div class="container">
            <div class="page-header-content">
                <h1 class="title">Phlebotomist Management</h1>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li><a href="/admin/dashboard">Admin</a></li>
                    <li>Phlebotomists</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Flash Messages -->
    <% if (success) { %>
        <div class="container mt-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        </div>
    <% } %>
    
    <% if (error) { %>
        <div class="container mt-4">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error %>
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <section class="padding-top padding-bottom">
        <div class="container">
            <!-- Stats Overview -->
            <div class="row mb-5">
                <div class="col-md-3">
                    <div class="dashboard-card" style="background-color: #e8f4fd; color: #2196f3; border-left: 5px solid #2196f3;">
                        <i class="fas fa-user-clock"></i>
                        <h5>Pending Review</h5>
                        <h2 class="mb-0"><%= pendingCount || 0 %></h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="dashboard-card" style="background-color: #e8f5e9; color: #4caf50; border-left: 5px solid #4caf50;">
                        <i class="fas fa-user-check"></i>
                        <h5>Approved</h5>
                        <h2 class="mb-0"><%= approvedCount || 0 %></h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="dashboard-card" style="background-color: #fce4ec; color: #e91e63; border-left: 5px solid #e91e63;">
                        <i class="fas fa-user-slash"></i>
                        <h5>Rejected</h5>
                        <h2 class="mb-0"><%= rejectedCount || 0 %></h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="dashboard-card" style="background-color: #fff3e0; color: #ff9800; border-left: 5px solid #ff9800;">
                        <i class="fas fa-users"></i>
                        <h5>Total</h5>
                        <h2 class="mb-0"><%= totalCount || 0 %></h2>
                    </div>
                </div>
            </div>

            <!-- Filter Buttons -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filter by Status:</h5>
                    <div class="filter-buttons">
                        <a href="/admin/phlebotomists?status=all" 
                           class="btn <%= currentStatus === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">
                            All (<%= totalCount %>)
                        </a>
                        <a href="/admin/phlebotomists?status=pending_review" 
                           class="btn <%= currentStatus === 'pending_review' ? 'btn-warning' : 'btn-outline-warning' %>">
                            Pending Review (<%= pendingCount %>)
                        </a>
                        <a href="/admin/phlebotomists?status=approved" 
                           class="btn <%= currentStatus === 'approved' ? 'btn-success' : 'btn-outline-success' %>">
                            Approved (<%= approvedCount %>)
                        </a>
                        <a href="/admin/phlebotomists?status=rejected" 
                           class="btn <%= currentStatus === 'rejected' ? 'btn-danger' : 'btn-outline-danger' %>">
                            Rejected (<%= rejectedCount %>)
                        </a>
                        <a href="/admin/phlebotomists?status=suspended" 
                           class="btn <%= currentStatus === 'suspended' ? 'btn-secondary' : 'btn-outline-secondary' %>">
                            Suspended (<%= suspendedCount %>)
                        </a>
                    </div>
                </div>
            </div>

            <!-- Applications List -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        Phlebotomist Applications
                        <span class="float-right">
                            <button class="btn btn-sm btn-outline-secondary" onclick="exportToCSV()">
                                <i class="fas fa-download"></i> Export
                            </button>
                        </span>
                    </h5>
                    
                    <% if (phlebotomists.length === 0) { %>
                        <div class="empty-state">
                            <i class="fas fa-users"></i>
                            <h4>No applications found</h4>
                            <p class="text-muted">There are no phlebotomist applications with the selected status.</p>
                            <a href="/admin/phlebotomists?status=all" class="btn btn-primary">
                                View All Applications
                            </a>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Contact</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Applied</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% phlebotomists.forEach(phleb => { %>
                                    <tr>
                                        <td>
                                            <strong><%= phleb.firstName %> <%= phleb.lastName %></strong>
                                            <br>
                                            <small class="text-muted"><%= phleb.gender %></small>
                                        </td>
                                        <td>
                                            <div><%= phleb.email %></div>
                                            <div><%= phleb.phone %></div>
                                        </td>
                                        <td>
                                            <div><%= phleb.address.city %>, <%= phleb.address.state %></div>
                                            <small class="text-muted"><%= phleb.address.zipCode %></small>
                                        </td>
                                        <td>
                                            <% if (phleb.status === 'pending_review') { %>
                                                <span class="status-badge badge-pending">Pending Review</span>
                                            <% } else if (phleb.status === 'approved') { %>
                                                <span class="status-badge badge-approved">Approved</span>
                                                <% if (phleb.isActive) { %>
                                                    <br><small class="text-success">Active</small>
                                                <% } else { %>
                                                    <br><small class="text-warning">Inactive</small>
                                                <% } %>
                                            <% } else if (phleb.status === 'rejected') { %>
                                                <span class="status-badge badge-rejected">Rejected</span>
                                            <% } else if (phleb.status === 'suspended') { %>
                                                <span class="status-badge badge-suspended">Suspended</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(phleb.appliedAt).toLocaleDateString() %>
                                            <br>
                                            <small class="text-muted">
                                                <%= new Date(phleb.appliedAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                            </small>
                                        </td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-info" 
                                                    onclick="viewApplication('<%= phleb._id %>')">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                            
                                            <% if (phleb.status === 'pending_review') { %>
                                                <button class="btn btn-sm btn-success" 
                                                        data-toggle="modal" 
                                                        data-target="#approveModal"
                                                        data-id="<%= phleb._id %>"
                                                        data-name="<%= phleb.firstName %> <%= phleb.lastName %>">
                                                    <i class="fas fa-check"></i> Approve
                                                </button>
                                                <button class="btn btn-sm btn-danger"
                                                        data-toggle="modal"
                                                        data-target="#rejectModal"
                                                        data-id="<%= phleb._id %>"
                                                        data-name="<%= phleb.firstName %> <%= phleb.lastName %>">
                                                    <i class="fas fa-times"></i> Reject
                                                </button>
                                            <% } else if (phleb.status === 'approved') { %>
                                                <button class="btn btn-sm btn-warning"
                                                        onclick="suspendPhlebotomist('<%= phleb._id %>', '<%= phleb.firstName %> <%= phleb.lastName %>')">
                                                    <i class="fas fa-pause"></i> Suspend
                                                </button>
                                            <% } else if (phleb.status === 'suspended') { %>
                                                <button class="btn btn-sm btn-success"
                                                        onclick="reactivatePhlebotomist('<%= phleb._id %>', '<%= phleb.firstName %> <%= phleb.lastName %>')">
                                                    <i class="fas fa-play"></i> Reactivate
                                                </button>
                                            <% } %>
                                            
                                            <button class="btn btn-sm btn-danger"
                                                    onclick="confirmDelete('<%= phleb._id %>', '<%= phleb.firstName %> <%= phleb.lastName %>')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?status=<%= currentStatus %>&page=<%= currentPage - 1 %>">
                                        Previous
                                    </a>
                                </li>
                                <% } %>
                                
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?status=<%= currentStatus %>&page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                                
                                <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?status=<%= currentStatus %>&page=<%= currentPage + 1 %>">
                                        Next
                                    </a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- View Application Modal -->
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">Application Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="applicationDetails">
                    <!-- Details will be loaded here via AJAX -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Approve Modal -->
    <div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="approveForm" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="approveModalLabel">Approve Phlebotomist</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>You are about to approve <strong id="approveName"></strong> as a phlebotomist.</p>
                        <p>Please set a temporary password for their account:</p>
                        <div class="form-group">
                            <label for="password">Temporary Password</label>
                            <input type="password" class="form-control" id="password" name="password" required 
                                   placeholder="Enter temporary password" minlength="8">
                            <small class="form-text text-muted">
                                The phlebotomist will be asked to change this password on first login.
                            </small>
                        </div>
                        <input type="hidden" id="approveId" name="id">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Approve & Send Credentials</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="rejectForm" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Application</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>You are about to reject the application of <strong id="rejectName"></strong>.</p>
                        <div class="form-group">
                            <label for="reason">Reason for Rejection (Optional)</label>
                            <textarea class="form-control" id="reason" name="reason" rows="3" 
                                      placeholder="Provide a reason for rejection..."></textarea>
                        </div>
                        <input type="hidden" id="rejectId" name="id">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Application</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-bottom">
            <div class="container">
                <div class="text-center">
                    <p class="mb-0">&copy; 2023 WhiteCoat - Phlebotomist Management System</p>
                </div>
            </div>
        </div>
    </footer>

   
        <!-- Scripts -->
   <!-- Use CDN for testing -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/main.js"></script>

    <script>
        // Set up modals when DOM is ready
        $(document).ready(function() {
            console.log('Document ready - setting up modals');
            
            // Approve modal setup
            $('#approveModal').on('show.bs.modal', function(event) {
                console.log('Approve modal opening');
                const button = $(event.relatedTarget);
                const id = button.data('id');
                const name = button.data('name');
                
                console.log('Approve modal data:', { id, name });
                
                const modal = $(this);
                modal.find('#approveName').text(name);
                modal.find('#approveId').val(id);
                modal.find('#approveForm').attr('action', `/admin/phlebotomists/approve/${id}`);
            });

            // Reject modal setup
            $('#rejectModal').on('show.bs.modal', function(event) {
                console.log('Reject modal opening');
                const button = $(event.relatedTarget);
                const id = button.data('id');
                const name = button.data('name');
                
                console.log('Reject modal data:', { id, name });
                
                const modal = $(this);
                modal.find('#rejectName').text(name);
                modal.find('#rejectId').val(id);
                modal.find('#rejectForm').attr('action', `/admin/phlebotomists/reject/${id}`);
            });

            // Test button clicks
            $('button[data-target="#approveModal"]').on('click', function() {
                console.log('Approve button clicked:', $(this).data());
            });

            $('button[data-target="#rejectModal"]').on('click', function() {
                console.log('Reject button clicked:', $(this).data());
            });

            $('button[onclick^="viewApplication"]').on('click', function() {
                console.log('View button clicked');
            });
        });

        // View application details
        function viewApplication(id) {
            console.log('View application called with ID:', id);
            // Instead of AJAX, just redirect to the view page
            window.location.href = `/admin/phlebotomists/view/${id}`;
        }

        // Suspend phlebotomist - SIMPLIFIED VERSION
        function suspendPhlebotomist(id, name) {
            console.log('Suspend called:', id, name);
            if (confirm(`Are you sure you want to suspend ${name}?`)) {
                // Create and submit a form
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/phlebotomists/suspend/${id}`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Reactivate phlebotomist - SIMPLIFIED VERSION
        function reactivatePhlebotomist(id, name) {
            console.log('Reactivate called:', id, name);
            if (confirm(`Are you sure you want to reactivate ${name}?`)) {
                // Create and submit a form
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/phlebotomists/reactivate/${id}`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Delete phlebotomist - SIMPLIFIED VERSION
        function confirmDelete(id, name) {
            console.log('Delete called:', id, name);
            if (confirm(`WARNING: This will permanently delete ${name} and all associated data.\n\nAre you absolutely sure?`)) {
                // Create and submit a form
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/phlebotomists/delete/${id}`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Export to CSV
        function exportToCSV() {
            console.log('Export CSV called');
            const table = document.querySelector('table');
            if (!table) {
                alert('No data to export');
                return;
            }
            
            const rows = table.querySelectorAll('tr');
            let csv = [];
            
            for (let i = 0; i < rows.length; i++) {
                const row = [], cols = rows[i].querySelectorAll('td, th');
                
                for (let j = 0; j < cols.length; j++) {
                    let text = cols[j].innerText.replace(/(\r\n|\n|\r)/gm, '').replace(/(\s\s+)/gm, ' ');
                    text = text.replace(/"/g, '""');
                    if (text.includes(',') || text.includes('"') || text.includes('\n')) {
                        text = '"' + text + '"';
                    }
                    row.push(text);
                }
                
                csv.push(row.join(','));
            }
            
            const csvContent = csv.join('\n');
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            
            link.setAttribute('href', url);
            link.setAttribute('download', `phlebotomists_${new Date().toISOString().split('T')[0]}.csv`);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // Auto-dismiss alerts
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Debug: Log all elements with data-target
        console.log('Elements with data-target:', $('[data-target]').length);
        console.log('Elements with data-toggle:', $('[data-toggle]').length);
    </script>
</body>
</html>